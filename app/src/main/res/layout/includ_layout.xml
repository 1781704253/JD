<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="top"
    android:layout_marginTop="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home__sdv_sao"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        app:placeholderImage="@drawable/sao_kind" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/home__sdv_sao"
        android:background="@drawable/shape01"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/home__iv_sou"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/order_find" />

        <EditText
            android:id="@+id/home__et_message"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@null" />

        <ImageView
            android:id="@+id/home__iv_ren"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/root" />
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_sdv_message"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        app:placeholderImage="@drawable/a9v" />
</RelativeLayout>
